<mvc:View controllerName="com.kaar.ehsm.controller.Incidents"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page id="incidentsPage" title="Incident Management" showNavButton="true" navButtonPress=".onNavBack">
        <content>
             <Table id="incidentsTable" items="{incidents>/}" width="auto" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents History"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Incident ID" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Description" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Status" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Priority" />
                    </Column>
                    <Column hAlign="End" minScreenWidth="Desktop" demandPopin="true">
                        <Text text="Date" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press=".onIncidentItemPress">
                        <cells>
                            <ObjectIdentifier title="{incidents>IncidentId}"/>
                            <Text text="{incidents>IncidentDescription}" />
                            <ObjectStatus text="{incidents>IncidentStatus}" state="{path: 'incidents>IncidentStatus', formatter: '.formatter.statusState'}" />
                            <ObjectStatus text="{incidents>IncidentPriority}" state="{path: 'incidents>IncidentPriority', formatter: '.formatter.priorityState'}" />
                            <Text text="{path: 'incidents>IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
